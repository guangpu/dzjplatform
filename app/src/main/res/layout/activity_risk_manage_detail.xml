<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightColor="@color/colorTitle"
        app:rightTitle=""
        app:title="重大危险源详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="项目名称"
                app:bar_rightText="测试项目" />


            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_create_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="填报日期"
                app:bar_rightText="2020-03-09" />


            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_create_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="填报人"
                app:bar_rightText="张晶晶" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_image_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="计划开始时间"
                app:bar_rightText="2020-03-09" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_manage_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="计划结束时间"
                app:bar_rightText="2020-03-09" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="#ececec" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_inspection_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="实际开始时间"
                app:bar_rightText="2020-03-10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="#ececec" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_check_input_class_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="实际结束时间"
                app:bar_rightText="2020-03-11" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>